" Выход с переходом в текущую директорию
command! Q :execute '!echo %d > ~/.vifm/lastdir' | quit

command df dfc %m 2> /dev/null
command dus noc dus %d/* %m
command dmesg dmesg %m

command man man %a %m

command t t -p %a %m

command nt nt %a %m

command vlc vlc %f
command vlp vlp %f
command vls vls %f

command tig tig %d

command ext ext %f

command diff vimdiff %f %F
command run !! ./%f
command vim !vim %a
command git !!git %a

command cal cal -y %m

command xc xc %c

command config :vim $MYVIFMRC

