alias pgrep="pgrep -l"
#- Запуск сервиса
start() { su -c "sh /etc/init.d/$1 start"; }
#- Остановка сервиса
stop() { su -c "sh /etc/init.d/$1 stop"; }
#- Перезапуск сервиса
restart() { su -c "sh /etc/init.d/$1 restart"; }

