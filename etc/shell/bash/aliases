#- Копирование файла $1 в $SHELLRC/bin/$2
cpbin() {
	cp $1 $SHELLRC/bin/$2/
}

#- Перемещение файла $1 в $SHELLRC/bin/$2
mvbin() {
	mv $1 $SHELLRC/bin/$2/
}

#- Создание символической ссылки на файл $1 в $SHELLRC/bin/$2
lnbin() {
	ln -s $(realpath $1) $SHELLRC/bin/$2/$1
}

